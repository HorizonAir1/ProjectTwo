    <div class="row">
        <div class="col-md-3">
            <form for="Flight" method="post">
                <label for="Destination" class="control-label">Departure</label>
                <div class="form-group">
                    <select name="Destination" size="1" class="selectpicker form-control">
                        <option value="" selected>Departure</option>
                        @foreach (var departure in Model)
                        {
                            <option value="@departure.Departure">@departure.Departure</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="Arrival" class="control-label">Arrival:</label>
                    <select name="Destination" size="1" class="selectpicker form-control">
                        <option value="" selected>Arriving</option>
                        @foreach (var arrival in Model)
                        {
                            <option value="@arrival.Destination">@arrival.Destination</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="DepartureDate" class="control-label">Departure Date:</label>
                    <input type="date" name="DepartureDate" class="form-control input-sm" />
                    <span for="DepartureDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ArrivalDate" class="control-label">Arrival Date:</label>
                    <input type="date" name="ArrivalDate" class="form-control input-sm" />
                    <span for="ArrivalDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>